general {
        colors = true
        interval = 5
        color_good = "#859900"
        color_bad = "#dc322f"
        color_degraded = "#cb4b16"
        #separator = " :: "

}


#order += "volume master"
#order += "ipv6"
order += "wireless _first_"
#order += "ethernet _first_"
#order += "battery all"
order += "disk /"
#order += "load"
order += "memory"
order += "tztime local"

wireless _first_ {
        format_up = "󰖩 Connected"
        format_down = "󰖪 Down"
}

ethernet _first_ {
        format_up = "󰈀 Connected"
        format_down = "󰈀 Down"
}

battery all {
        format = " %percentage"
        format_down = "No battery"
}

disk "/" {
        format = "󰒋 %avail"
}

load {
        format = "%1min"
}

memory {
        format = " %used"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "󱑁 %H:%M  %Y-%m-%d"
}

volume master {
        format = " %volume"
        format_muted = " %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
